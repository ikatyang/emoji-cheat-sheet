name: Lint

on:
  - push
  - pull_request

jobs:
  lint:
    name: Lint
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v2-beta
        with:
          node-version: "12"

      - name: Install git@github.com:ikatyang/emoji-cheat-sheet.git


        run: yarn

      - name: Lint
        run: yarn lint
